@model Shipping.Mvc.Models.LogIn.IndexModel
           
@section Title
{
	Log in to VJP
}

@using (Html.BeginForm()) 
{

	if (string.Compare(Request.Browser.Type, "IE6", true) == 0)
	{
		<div class="status-message warning ie-warning">
			<p>
				You are using Internet Explorer 6, which is no longer supported by Microsoft. <a id="ie6-learn-more-link" href="#ie6-learn-more">Learn More</a>
			</p>
		</div>
	}
    
	if (Model.AutoLogout)
	{
		<div class="status-message information autologout-message">
			<p>
				You were logged out of VJP due to inactivity.
			</p>
		</div>
	}
    
	@Html.ValidationSummary("Please correct the following information:", new { @class = "status-message error" })

	<fieldset id="login">
		<h2 class="lock" id="login-title">Log in to VJP</h2>
		<div class="editor">
			<div class="editor-label">
				@Html.LabelFor(model => model.Username)<em>*</em>
			</div>
			<div class="editor-field">
				@Html.TextBoxFor(model => model.Username)
			</div>
			
			<div class="editor-label">
				@Html.LabelFor(model => model.Password)<em>*</em>
			</div>
			<div class="editor-field">
				@Html.PasswordFor(model => model.Password)
			</div>

			<div>
				<input type="submit" class="primary check" value="Log In" />
			</div>
		</div>
	</fieldset>
	<div id="please-wait" style="display:none;">
		<img src="@Url.Content("/icons/wait.gif")" alt="" />
		<span>Logging in to Visita Jaya Perkasa...</span>
	</div>

	<div id="forgot-password">
		<a href="@Url.Action("Forgot", "Password")" class="help" id="forgot-password-link">I forgot my username or password.</a>
	</div>

	@Html.AntiForgeryToken()
}

@section Script
{
    @if (Request.Browser.Type == "IE6")
    {
