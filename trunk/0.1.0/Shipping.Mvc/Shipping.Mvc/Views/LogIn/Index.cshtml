	    <script type="text/javascript" src="@Url.Content("~/Content/fancybox/jquery.fancybox-1.3.1.pack.js")"></script>
	    <script type="text/javascript">
		    $(document).ready(function () {
			    $('#ie6-learn-more-link').fancybox({
				    'transitionIn'	:	'fade',
