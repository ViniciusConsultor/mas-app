@model VisitaJayaPerkasa.Mvc.Models.ConditionModel

@{
    ViewBag.Title = "Create Condition";
}

<h2>Create Condition</h2>

<div id="toolbar">
    <ul>
        <li>@Html.ActionLink("Back to List", "Index", ViewBag.RouteDicForList as RouteValueDictionary)</li>
    </ul>
</div>

<script src="@Url.Content("~/Scripts/jquery.vaalidate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Create Condition was unsuccessful. Please correct the errors and try again.")

@using (Html.BeginForm())
{
    <table>
    <tr>
        <td class="header">@Html.LabelFor(m => m.ConditionCode)</td>
        <td class="content">@Html.TextBoxFor(m => m.ConditionCode)@Html.ValidationMessageFor(m => m.ConditionCode)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.ConditionName)</td>
        <td class="content">@Html.TextBoxFor(m => m.ConditionName)@Html.ValidationMessageFor(m => m.ConditionName)</td>
    </tr>
    <tr>
        <td class="header"></td>
        <td class="content"><button name="submit">Create Condition</button></td>
    </tr>
</table>
}
