@model VisitaJayaPerkasa.Mvc.Models.ConditionModel

@{
    ViewBag.Title = "Edit Condition";
}

<h2>Edit Condition</h2>

<div id="toolbar">
    <ul>
        <li>@Html.ActionLink("Back to List", "Index", ViewBag.RouteDicForList as RouteValueDictionary)</li>
    </ul>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Edit Condition was unsuccessful. Please correct the errors and try again.")

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ConditionCode)
    <table>
    <tr>
        <td class="header">@Html.LabelFor(m => m.ConditionCode)</td>
        <td class="content">@Html.TextBoxFor(m => m.ConditionCode)@Html.ValidationMessageFor(m => m.ConditionCode)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.ConditionName)</td>
        <td class="content">@Html.TextBoxFor(m => m.ConditionName)@Html.ValidationMessageFor(m => m.ConditionName)</td>
    </tr>
    <tr>
        <td class="header"></td>
        <td class="content"><button name="submit">Edit Condition</button></td>
    </tr>
</table>
}
