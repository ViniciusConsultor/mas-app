@using VisitaJayaPerkasa.Web.Mvc
@using VisitaJayaPerkasa.Mvc.Models
@using MvcContrib.UI.Grid;
@model PagedViewModel<VesselModel>

@{
    ViewBag.Title = "Vessel List";
}

<h2>Vessel List</h2>

<p>
    @Html.ActionLink("Create Vessel", "AddVessel", "Vessel")
</p>

@{Html.RenderPartial("SearchBox");}
@{Html.RenderPartial("Pager", Model.PagedList);}
<div class="grid-wrapper">
@Html.Grid(Model.PagedList).Columns(column =>{
    column.For(x => Html.ActionQueryLink(x.VesselCode, "EditVessel", new { id = x.VesselCode })).Named("VesselCode").InsertAt(0);
    column.For(x => x.VesselName);
    column.For(x => Html.ActionQueryLink("delete", "DeleteVessel", new { id = x.VesselCode })).Named("Action").Sortable(false).InsertAt(2);
}).Sort(Model.GridSortOptions).Attributes(@class => "grid-style")
</div>