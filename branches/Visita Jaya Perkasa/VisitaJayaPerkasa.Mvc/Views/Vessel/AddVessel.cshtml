@model VisitaJayaPerkasa.Mvc.Models.VesselModel

@{
    ViewBag.Title = "Create Vessel";
}

<h2>Create Vessel</h2>

<div id="toolbar">
    <ul>
        <li>@Html.ActionLink("Back to List", "Index", ViewBag.RouteDicForList as RouteValueDictionary)</li>
    </ul>
</div>

<script src="@Url.Content("~/Scripts/jquery.vaalidate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Create Vessel was unsuccessful. Please correct the errors and try again.")

@using (Html.BeginForm())
{
    <table>
    <tr>
        <td class="header">@Html.LabelFor(m => m.VesselCode)</td>
        <td class="content">@Html.TextBoxFor(m => m.VesselCode)@Html.ValidationMessageFor(m => m.VesselCode)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.VesselName)</td>
        <td class="content">@Html.TextBoxFor(m => m.VesselName)@Html.ValidationMessageFor(m => m.VesselName)</td>
    </tr>
    <tr>
        <td class="header"></td>
        <td class="content"><button name="submit">Create Vessel</button></td>
    </tr>
</table>
}
