@model VisitaJayaPerkasa.Mvc.Models.VesselModel

@{
    ViewBag.Title = "Edit Vessel";
}

<h2>Edit Vessel</h2>

<p>
    @Html.ActionLink("Back to List", "Index",
    ViewBag.RouteDicForList as RouteValueDictionary)
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Edit Vessel was unsuccessful. Please correct the errors and try again.")

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.VesselCode)
    <table>
    <tr>
        <td class="header">@Html.LabelFor(m => m.VesselCode)</td>
        <td class="content">@Html.TextBoxFor(m => m.VesselCode)@Html.ValidationMessageFor(m => m.VesselCode)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.VesselName)</td>
        <td class="content">@Html.TextBoxFor(m => m.VesselName)@Html.ValidationMessageFor(m => m.VesselName)</td>
    </tr>
    <tr>
        <td class="header"></td>
        <td class="content"><button name="submit">Edit Vessel</button></td>
    </tr>
</table>
}
