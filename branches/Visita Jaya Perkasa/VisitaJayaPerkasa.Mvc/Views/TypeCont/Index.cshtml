@using VisitaJayaPerkasa.Web.Mvc
@using VisitaJayaPerkasa.Mvc.Models
@using MvcContrib.UI.Grid;
@model PagedViewModel<TypeContModel>

@{
    ViewBag.Title = "TypeCont List";
}

<h2>TypeCont List</h2>

<div id="toolbar">
    <ul>
        <li>@Html.ActionLink("Create Container Type", "AddTypeCont", "TypeCont")</li>
    </ul>
</div>

@{Html.RenderPartial("SearchBox");}
@{Html.RenderPartial("Pager", Model.PagedList);}
<div class="grid-wrapper">
@Html.Grid(Model.PagedList).Columns(column =>{
    column.For(x => Html.ActionQueryLink(x.TypeCode, "EditTypeCont", new { id = x.TypeCode })).Named("TypeCode").InsertAt(0);
    column.For(x => x.TypeName);
    column.For(x => Html.ActionQueryLink("delete", "DeleteTypeCont", new { id = x.TypeCode })).Named("Action").Sortable(false).InsertAt(2);
}).Sort(Model.GridSortOptions).Attributes(@class => "grid-style")
</div>
