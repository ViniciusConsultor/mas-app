@model VisitaJayaPerkasa.Mvc.Models.LeadTimeModel

@{
    ViewBag.Title = "Edit LeadTime";
}

<h2>Edit LeadTime</h2>

<p>
    @Html.ActionLink("Back to List", "Index",
    ViewBag.RouteDicForList as RouteValueDictionary)
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Edit LeadTime was unsuccessful. Please correct the errors and try again.")

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CityCode)
    <table>
    <tr>
        <td class="header">@Html.LabelFor(m => m.CityCode)</td>
        <td class="content">@Html.DropDownListFor(m => m.CityCode, Model.ListItems)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.Days)</td>
        <td class="content">@Html.TextBoxFor(m => m.Days)@Html.ValidationMessageFor(m => m.Days)</td>
    </tr>
    <tr>
        <td class="header"></td>
        <td class="content"><button name="submit">Edit LeadTime</button></td>
    </tr>
</table>
}
