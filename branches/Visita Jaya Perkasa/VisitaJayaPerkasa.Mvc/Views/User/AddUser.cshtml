@model VisitaJayaPerkasa.Mvc.Models.UserModel

@{
    ViewBag.Title = "Create New User";
}

<h2>Create New User</h2>

<p>
    @Html.ActionLink("Back to List", "Index",
    ViewBag.RouteDicForList as RouteValueDictionary)
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Create User was unsuccessful. Please correct the errors and try again.")

@using (Html.BeginForm())
{
    <table>
    <tr>
        <td class="header">@Html.LabelFor(m => m.SelectedRoleName)</td>
        <td class="content">@Html.DropDownListFor(m => m.SelectedRoleName, Model.Roles)@Html.ValidationMessageFor(m => m.SelectedRoleName)</td>
        <td class="spacer">&nbsp;</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.FirstName)</td>
        <td class="content">@Html.EditorFor(m => m.FirstName)@Html.ValidationMessageFor(m => m.FirstName)</td>
        <td class="spacer">&nbsp;</td>
        <td class="header">@Html.LabelFor(m => m.LastName)</td>
        <td class="content">@Html.EditorFor(m => m.LastName)@Html.ValidationMessageFor(m => m.LastName)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.MiddleInitial)</td>
        <td class="content">@Html.EditorFor(m => m.MiddleInitial)@Html.ValidationMessageFor(m => m.MiddleInitial)</td>
        <td class="spacer">&nbsp;</td>
        <td class="header">@Html.LabelFor(m => m.Username)</td>
        <td class="content">@Html.EditorFor(m => m.Username)@Html.ValidationMessageFor(m => m.Username)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.PhoneNumber)</td>
        <td class="content">@Html.EditorFor(m => m.PhoneNumber)@Html.ValidationMessageFor(m => m.PhoneNumber)</td>
        <td class="spacer">&nbsp;</td>
        <td class="header" rowspan="3">@Html.LabelFor(m => m.Address)</td>
        <td class="content" rowspan="3">@Html.TextAreaFor(m => m.Address)@Html.ValidationMessageFor(m => m.Address)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.MobilePhoneNumber)</td>
        <td class="content">@Html.EditorFor(m => m.MobilePhoneNumber)@Html.ValidationMessageFor(m => m.MobilePhoneNumber)</td>
        <td class="spacer">&nbsp;</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.StartingDate)</td>
        <td class="content">@Html.EditorFor(m => m.StartingDate)@Html.ValidationMessageFor(m => m.StartingDate)</td>
        <td class="spacer">&nbsp;</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.Nik)</td>
        <td class="content">@Html.EditorFor(m => m.Nik)@Html.ValidationMessageFor(m => m.Nik)</td>
        <td class="spacer">&nbsp;</td>
        <td class="header">@Html.LabelFor(m => m.Gender)</td>
        <td class="content">@Html.DropDownListFor(m => m.Gender, Model.Genders)@Html.ValidationMessageFor(m => m.Gender)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.SalaryPerMonth)</td>
        <td class="content">@Html.EditorFor(m => m.SalaryPerMonth)@Html.ValidationMessageFor(m => m.SalaryPerMonth)</td>
        <td class="spacer">&nbsp;</td>
        <td class="header">@Html.LabelFor(m => m.MaritalStatus)</td>
        <td class="content">@Html.DropDownListFor(m => m.MaritalStatus, Model.MaritalStatuses)@Html.ValidationMessageFor(m => m.MaritalStatus)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.UmkPerDay)</td>
        <td class="content">@Html.EditorFor(m => m.UmkPerDay)@Html.ValidationMessageFor(m => m.UmkPerDay)</td>
        <td class="spacer">&nbsp;</td>
    </tr>
    <tr>
        <td class="content" colspan="5" align="center"><button name="submit">Create User</button></td>
    </tr>
    </table>
}