@using VisitaJayaPerkasa.Web.Mvc
@using VisitaJayaPerkasa.Mvc.Models
@using MvcContrib.UI.Grid;
@model PagedViewModel<SupplierModel>

@{
    ViewBag.Title = "Supplier List";
}

<h2>Supplier List</h2>

<p>
    @Html.ActionLink("Create Supplier", "Create", "Supplier")
</p>

@{Html.RenderPartial("SearchBox");}
@{Html.RenderPartial("Pager", Model.PagedList);}
<div class="grid-wrapper">
@Html.Grid(Model.PagedList).Columns(column =>{
    column.For(x => Html.ActionQueryLink(x.SupplierName, "Edit", new { id = x.Id })).Named("Supplier Name").SortColumnName("SupplierName").InsertAt(0);
    column.For(x => x.Address);
    column.For(x => x.Phone);
    column.For(x => x.Fax);
    column.For(x => x.Email);
    column.For(x => x.ContactPerson);
    column.For(x => Html.ActionQueryLink("delete", "Delete", new { id = x.Id })).Named("Action").Sortable(false).InsertAt(6);
}).Sort(Model.GridSortOptions).Attributes(@class => "grid-style")
</div>
