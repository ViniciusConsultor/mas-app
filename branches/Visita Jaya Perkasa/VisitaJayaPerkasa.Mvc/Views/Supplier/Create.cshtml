@using VisitaJayaPerkasa.Web.Mvc
@model VisitaJayaPerkasa.Mvc.Models.SupplierModel

@{
    ViewBag.Title = "Create Supplier";
}

<h2>Create Supplier</h2>

<div id="toolbar">
    <ul>
        <li>@Html.ActionLink("Back to List", "Index", ViewBag.RouteDicForList as RouteValueDictionary)</li>
    </ul>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@{Html.EnableClientValidation();}
@Html.ValidationSummary(true, "Create Supplier was unsuccessful. Please correct the errors and try again.")

@using (Html.BeginForm())
{
    <table>
    <tr>
        <td class="header">@Html.LabelFor(m => m.SelectedCategoryCode)</td>
        <td class="content">@Html.DropDownListFor(m => m.SelectedCategoryCode, Model.Categories)@Html.ValidationMessageFor(m => m.SelectedCategoryCode)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.SupplierName)</td>
        <td class="content">@Html.TextBoxFor(m => m.SupplierName)@Html.ValidationMessageFor(m => m.SupplierName)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.Address)</td>
        <td class="content">@Html.TextBoxFor(m => m.Address) @Html.ValidationMessageFor(m => m.Address)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.Phone)</td>
        <td class="content">@Html.TextBoxFor(m => m.Phone) @Html.ValidationMessageFor(m => m.Phone)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.Fax)</td>
        <td class="content">@Html.TextBoxFor(m => m.Fax) @Html.ValidationMessageFor(m => m.Fax)</td>
    </tr>
    <tr>
        <td class="header">@Html.LabelFor(m => m.Email)</td>
        <td class="content">@Html.TextBoxFor(m => m.Email) @Html.ValidationMessageFor(m => m.Email)</td>
    </tr>
     <tr>
        <td class="header">@Html.LabelFor(m => m.ContactPerson)</td>
        <td class="content">@Html.TextBoxFor(m => m.ContactPerson) @Html.ValidationMessageFor(m => m.ContactPerson)</td>
    </tr>
   @* <tr>
        <td class="header"></td>
        <td class="content"><button name="submit">Create Supplier</button></td>
    </tr>*@
</table>
 
        <div id="editorRows">
             @foreach (var item in Model.SupplierDetails) 
             {
                 Html.RenderPartial("SupplierEditorRow", item);
             }
        </div>
        @Html.ActionLink("Add another...", "BlankEditorRow", new { ViewContext.FormContext.FormId }, new { id = "addItem" })
        
        <input type="submit" value="Finished" />
    
    
}




