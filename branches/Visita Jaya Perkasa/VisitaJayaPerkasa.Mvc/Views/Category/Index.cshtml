@using VisitaJayaPerkasa.Web.Mvc
@using VisitaJayaPerkasa.Mvc.Models
@using MvcContrib.UI.Grid;
@model PagedViewModel<CategoryModel>

@{
    ViewBag.Title = "Category List";
}

<h2>Category List</h2>

<p>
    @Html.ActionLink("Create Category", "AddCategory", "Category")
</p>

@{Html.RenderPartial("SearchBox");}
@{Html.RenderPartial("Pager", Model.PagedList);}
<div class="grid-wrapper">
@Html.Grid(Model.PagedList).Columns(column =>{
    column.For(x => x.CategoryCode);
    column.For(x => Html.ActionQueryLink(x.CategoryName, "EditCategory", new { id = x.CategoryCode })).Named("Category Name").InsertAt(1);
    column.For(x => Html.ActionQueryLink("delete", "DeleteCategory", new { id = x.CategoryCode })).Named("Action").InsertAt(2);
}).Sort(Model.GridSortOptions).Attributes(@class => "grid-style")
</div>
